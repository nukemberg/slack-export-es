{
  "version": 1,
  "index_patterns": ["slack*"],
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "analysis": {
      "normalizer": {
        "case_insensitive_upper": {
          "type": "custom",
          "char_filter": [],
          "filter": ["uppercase"]
        }
      }
    }
  },
  "mappings": {
      "slack": {
          "dynamic_templates": [
            {
                "thumbs_string": {
                    "path_match": "files.thumb_*",
                    "match_mapping_type": "string",
                    "mapping": {
                        "index": false,
                        "doc_values": false
                    }
                }
            },
            {
                "thumbs_num": {
                    "path_match": "files.thumb_*",
                    "match_mapping_type": "long",
                    "mapping": {
                        "index": false,
                        "doc_values": false
                    }
                }
            },
            {
                "ts": {
                    "match": "ts",
                    "mapping": {
                        "type": "date",
                        "format": "epoch_millis" 
                    }
                }
            },
            {
                "_ts": {
                    "match": "_ts",
                    "mapping": {
                        "type": "date",
                        "format": "epoch_millis"                         
                    }
                }
            },
            {
                "default": {
                    "match": "*",
                    "match_mapping_type": "string",
                    "mapping": {
                        "type": "text",
                        "fields": {
                            "keyword": {
                                "type": "keyword"
                            }
                        }
                    }
                }
            }
          ],
          "properties": {
              "files": {
                "type": "nested"
              },
              "icons": {
                "enabled": false
              },
              "reactions": {
                "enabled": false
              },
              "attachments": {
                "type": "nested",
                "properties": {
                    "actions": {
                        "enabled": false
                    }
                }
              },
              "name": {
                  "type": "keyword"
              },
              "users": {
                  "type": "keyword"
              },
              "channel": {
                  "type": "keyword"
              },
              "username": {
                  "type": "keyword"
              },
              "bot_id": {
                  "type": "keyword"
              },
              "channel_id": {
                  "type": "keyword"
              },
              "type": {
                  "type": "keyword"
              },
              "subtype": {
                  "type": "keyword"
              },
              "text": {
                  "type": "text"
              },
              "ts": {
                  "type": "date",
                  "format": "epoch_millis"
              }
          }
      }
  }
}